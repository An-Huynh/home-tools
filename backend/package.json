{
  "name": "home-management-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && cp package*.json dist && cd dist && npm ci --omit=dev",
    "start:dev": "cross-env NODE_ENV=dev concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migration:run:dev": "cross-env NODE_ENV=dev ts-node ./node_modules/typeorm/cli.js migration:run -d ./src/db/data-source.ts",
    "migration:revert:dev": "cross-env NODE_ENV=dev ts-node ./node_modules/typeorm/cli.js migration:revert -d ./src/db/data-source.ts",
    "migration:generate:dev": "cross-env NODE_ENV=dev ts-node ./node_modules/typeorm/cli.js migration:generate -d src/db/data-source.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mssql": "^7.3.5",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.11"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.17",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
